<?xml version="1.0" encoding="utf-8"?>  
<TableRow
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="620px"
android:layout_height="145px"
android:layout_marginLeft="10px"
android:layout_marginRight="10px"
android:layout_marginTop="8px">
	
    <RelativeLayout
	android:layout_width="620px"
	android:layout_height="145px">
	
		<ImageView
		android:layout_width="620px"
		android:layout_height="145px"
		android:src="@drawable/panel_challenge_results" />
    
   		<ImageView
        android:id="@+id/movie_tn"        
        android:layout_width="100px"
        android:layout_height="100px"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="25px" /> 
        
		<TextView
	    android:id="@+id/movie_txt"
	    android:layout_width="300px"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/movie_tn"
	    android:layout_toRightOf="@id/movie_tn"
	    android:layout_toLeftOf="@+id/round_user_tn"
	    android:layout_marginLeft="5px"
	    android:text="Movie Name"
	    android:textColor="#18305c"
	    android:textSize="14px"
	    android:textStyle="bold" />
		
		<Button
	    android:id="@+id/buy_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/movie_txt"
	    android:layout_alignRight="@id/movie_txt"
	    android:layout_below="@id/movie_txt"
	    android:background="@null"
	    android:clickable="true"
	    android:gravity="left|center_vertical"
	    android:text="BUY NOW"
	    android:textColor="#FFFFFF"
	    android:textSize="12px"
	    android:textStyle="bold" />
		
		<ImageView
        android:id="@+id/round_user_tn"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_toLeftOf="@+id/round_player_tn"
        android:layout_alignTop="@id/movie_tn"  
        android:adjustViewBounds="true"
        android:layout_marginRight="20px"
        android:scaleType="centerCrop" />
		
		<TextView
		android:gravity="center_horizontal"
	    android:id="@+id/round_user_txt"
	    android:layout_width="wrap_content"
	    android:layout_below="@id/round_user_tn"
	    android:layout_alignLeft="@id/round_user_tn"
	    android:layout_alignRight="@id/round_user_tn"
	    android:layout_height="wrap_content"
	    android:text=""
	    android:textColor="#FFFFFF"
	    android:textSize="8px"
	    android:textStyle="bold" />
        
		<ImageView
	    android:id="@id/round_player_tn"
	    android:layout_width="80px"
	    android:layout_height="80px"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@id/movie_tn" 
	    android:layout_marginRight="20px"
	    android:adjustViewBounds="true"
	    android:scaleType="centerCrop" />
		
		<TextView
		android:gravity="center_horizontal"
	    android:id="@+id/round_player_txt"
	    android:layout_width="wrap_content"
	    android:layout_below="@id/round_player_tn"
	    android:layout_alignLeft="@+id/round_player_tn"
	    android:layout_alignRight="@+id/round_player_tn"
	    android:layout_height="wrap_content"
	    android:text=""
	    android:textColor="#FFFFFF"
	    android:textSize="11px"
	    android:textStyle="bold" />
    
    </RelativeLayout>
	
</TableRow>