<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/main_wrapper"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:facebook="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".GenreSelection">

    <RelativeLayout
    android:id="@+id/genre_selection_wrapper"
	android:layout_width="720px"
	android:layout_height="1280px"
	android:layout_gravity="center">
	
        <ImageView
		android:id="@+id/bg"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/movieslam_android_comp720_1280" >
		</ImageView>
		
        <ScrollView
        android:layout_width="720px"
        android:layout_height="1280px">
        
            <RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top">
        
	        <ImageView
	        android:id="@+id/genre_img"
			android:scaleType="centerCrop"
			android:adjustViewBounds="true"
			android:layout_width="465px"
			android:layout_height="324px"
			android:src="@drawable/genre_logo_and_copy"
			android:layout_alignParentTop="true"
			android:layout_marginTop="100px"
			android:layout_marginBottom="35px"
			android:layout_centerHorizontal="true">
			</ImageView>
			
	        <Button
		   	android:id="@+id/promo_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text=""
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="promo"
	   	    android:layout_centerHorizontal="true"
	   	    android:layout_below="@id/genre_img" />
        	
	        <Button
		   	android:id="@+id/all_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Random"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="all"
	   	    android:layout_centerHorizontal="true"
	   	    android:layout_below="@id/promo_btn" />
	        
	        <Button
		   	android:id="@+id/drama_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Drama"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="drama"
	   	    android:layout_centerHorizontal="true"
			android:layout_below="@id/all_btn" />
	        
	        <Button
		   	android:id="@+id/comedy_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Comedy"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="comedy"
	   	    android:layout_centerHorizontal="true"
			android:layout_below="@id/drama_btn" />
	        
	        <Button
		   	android:id="@+id/scifi_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Sci-Fi"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="scifi"
	   	    android:layout_centerHorizontal="true"
	   	    android:layout_below="@id/comedy_btn" />
	        
	        <Button
		   	android:id="@+id/action_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Action"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="action"
	   	    android:layout_centerHorizontal="true"
	   	    android:layout_below="@id/scifi_btn" />
	        
	        <Button
		   	android:id="@+id/horror_btn"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Horror"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="35px"
	   	    android:tag="horror"
	   	    android:layout_centerHorizontal="true"
	   	    android:layout_below="@id/action_btn" />
	        
	        <Button
		   	android:id="@+id/family"
		    android:layout_width="400px"
			android:layout_height="120px"
	   	    android:background="@drawable/button_bg"
	   	    android:clickable="true"
	   	    android:text="Family"
	   	    android:textColor="@android:color/white"
	   	    android:textSize="20px"
	   	    android:textStyle="bold"
	   	    android:onClick="gotoGamePlayPage"
	   	    android:layout_marginBottom="200px"
	   	    android:tag="family"
	   	    android:layout_centerHorizontal="true"
	   	    android:layout_below="@id/horror_btn"/>
        	
	        </RelativeLayout>
	        
	    </ScrollView>

	</RelativeLayout>
	
</FrameLayout>
