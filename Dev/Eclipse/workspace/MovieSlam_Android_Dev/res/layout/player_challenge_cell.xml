<?xml version="1.0" encoding="utf-8"?>  

<TableRow
xmlns:android="http://schemas.android.com/apk/res/android"  
android:id="@+id/tableRow1"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/panel_challengeboard_inactive"
android:layout_marginLeft="11dp"
android:layout_marginRight="11dp"
android:layout_marginTop="12dp" >				 
      
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_weight="1">
         
		<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		</LinearLayout>
         
		<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="6">
         	
			<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="3">
			</LinearLayout>
			
				<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="11">

					<ImageView					
					android:id="@+id/challenge_player_tn"
					android:adjustViewBounds="true"
					android:layout_width="fill_parent"
					android:layout_height="0dp"
					android:layout_weight="10"
					android:scaleType="centerCrop" />
		
					<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="0dp"
					android:layout_weight="2">
					</LinearLayout>
	
				</LinearLayout>
        
				<LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="1">
				</LinearLayout>
  
         		<TextView
         		    android:id="@+id/player_name_txt"
         		    android:layout_width="wrap_content"
         		    android:layout_height="fill_parent"
         		    android:layout_weight="24"
         		    android:gravity="top|left"
         		    android:text="Faaaa\naaaa"
         		    android:textColor="#18305c"
         		    android:textSize="25sp"
         		    android:textStyle="bold" />
          	
				<LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="6">
	
					<TextView
					android:id="@+id/player_score_txt"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:gravity="left"
					android:textColor="#18305c"
					android:textSize="20sp"
					android:textStyle="bold"
					android:layout_weight="1" />
	
				</LinearLayout>
         	
			</LinearLayout>
         
			<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:orientation="horizontal"
			android:layout_weight="2">
         	
			<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="2">
			</LinearLayout>
         	
			<Button
			android:id="@+id/clientimain"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="10"
			android:background="@drawable/button_bg"
			android:text="Accept"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="18sp" />
             
			<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			</LinearLayout>

			<Button
			android:id="@+id/button1"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="10"
			android:background="@drawable/button_bg"
			android:text="Decline"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="18sp" />
       
			<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="12">
			</LinearLayout>
        			            
		</LinearLayout>
   
		<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		</LinearLayout>
		
	</LinearLayout>
         
</TableRow>