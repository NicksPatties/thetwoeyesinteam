<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/main_wrapper"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:facebook="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <RelativeLayout
    android:id="@+id/game_home_wrapper"
	android:layout_width="720px"
	android:layout_height="1280px"
	android:layout_gravity="center">
	
        <ImageView
		android:id="@+id/bg"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/bg_challengeboard_720_1280" >
		</ImageView>
		
        <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/user_panel"
	    android:layout_width="644px"
	    android:layout_height="146px"
	    android:layout_marginTop="66px"
	    android:layout_centerHorizontal="true" 
	    android:layout_alignParentTop="true">        
	    </RelativeLayout>
	    
        <Button
   	    android:id="@+id/btn_splash"
   	    android:layout_width="644px"
   	    android:layout_height="100px"
   	    android:background="@drawable/button_bg"
   	    android:clickable="true"
   	    android:text="START NEW CHALLENGE"
   	    android:textColor="@android:color/white"
   	    android:textSize="25px"
   	    android:textStyle="bold"
   	    android:layout_marginTop="250px"
	    android:layout_centerHorizontal="true" 
	    android:layout_alignParentTop="true"
   	    android:onClick="gotoNewChallenge" />
        
        <Button
		android:id="@+id/help_btn"
		android:layout_width="75px"
		android:layout_height="75px"
		android:background="@drawable/help_button_bg"
		android:clickable="true"
		android:textColor="@android:color/white"
		android:layout_marginTop="385px"
	    android:layout_centerHorizontal="true" 
	    android:layout_alignParentTop="true"
	    android:layout_alignLeft="@+id/challenges_container"
		android:onClick="gotoHelp" />
        
        <Button
		android:id="@+id/refresh_btn"
		android:layout_width="75px"
		android:layout_height="75px"
		android:background="@drawable/refresh_button_bg"
		android:clickable="true"
		android:textColor="@android:color/white"
		android:layout_marginTop="385px"
	    android:layout_centerHorizontal="true" 
	    android:layout_alignParentTop="true"
	    android:layout_alignRight="@+id/challenges_container"
		android:onClick="gotoRefresh" />
        
        
        
        
	    
        <ScrollView
        android:id="@id/challenges_container"
        android:layout_width="644px"
	    android:layout_height="810px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >
   	    
			<TableLayout android:id="@+id/score_table"
			android:layout_width="match_parent"
			android:layout_height="match_parent">  
			</TableLayout>
       	
		</ScrollView>
	
    </RelativeLayout>

	
	
</FrameLayout>
