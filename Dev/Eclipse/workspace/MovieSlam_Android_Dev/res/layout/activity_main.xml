<RelativeLayout
android:id="@+id/layout"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:facebook="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

	<RelativeLayout
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:layout_centerHorizontal="true"
	android:layout_centerVertical="true">

		<ImageView
		android:id="@+id/bg"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:src="@drawable/bg_challengeboard" >
		</ImageView>
	
		<RelativeLayout
		android:layout_width="0dp"
		android:layout_alignLeft="@+id/bg"
		android:layout_alignRight="@+id/bg"
		android:layout_height="match_parent">
		    
		    <LinearLayout
		    android:background="@drawable/bg_challengeboard"
		    android:orientation="horizontal"
		    android:id="@+id/ContainerLayout"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true">
		    
			    <LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="60">
			    </LinearLayout> 
    
			    <LinearLayout
			    android:orientation="vertical"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="960">
    
			        <LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="0dp"
				    android:layout_weight="100">    	
				    </LinearLayout>
	    
			        <LinearLayout
			        android:orientation="horizontal"
			        android:id="@+id/user_panel"
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="216">        
				    </LinearLayout>	    
	    
			        <LinearLayout
			        android:orientation="vertical"
				    android:layout_width="fill_parent"
				    android:layout_height="0dp"
				    android:layout_weight="384">
	    	
			            <LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="0dp"
					    android:layout_weight="72">
					    </LinearLayout>
	    
			    		<Button
			    	    android:id="@+id/btn_splash"
			    	    android:layout_width="fill_parent"
			    	    android:layout_height="0dp"
			    	    android:layout_weight="150"
			    	    android:background="@drawable/button_bg"
			    	    android:clickable="true"
			    	    android:text="START NEW CHALLENGE"
			    	    android:textColor="@android:color/white"
			    	    android:textSize="25sp"
			    	    android:textStyle="bold"
			    	    android:onClick="gotoNewChallenge" />
	    	
				    	<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="0dp"
					    android:layout_weight="62">
					    </LinearLayout>
		    
				    	<LinearLayout
				    	android:orientation="horizontal"
					    android:layout_width="fill_parent"
					    android:layout_height="0dp"
					    android:layout_weight="80">
		        
				    	    <Button
					        android:id="@+id/btn_splash"
					        android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="fill_parent"
					        android:background="@drawable/help_button_bg"
					        android:clickable="true"
					        android:textColor="@android:color/white"
					        android:onClick="gotoHelp" />	    	    
	    	    
				    	    <LinearLayout
							android:layout_width="0dp"
							android:layout_height="fill_parent"
							android:layout_weight="10">
							</LinearLayout>	    	    
	    	    
				    	    <Button
					        android:id="@+id/btn_splash"
					        android:layout_weight="1"
					        android:layout_width="0dp"
					        android:layout_height="fill_parent"
					        android:background="@drawable/refresh_button_bg"
					        android:clickable="true"
					        android:textColor="@android:color/white"
					        android:onClick="gotoRefresh" />	    	    
	    	    
		    			</LinearLayout>
		    
				    	<LinearLayout
				    	android:orientation="horizontal"
					    android:layout_width="fill_parent"
					    android:layout_height="0dp"
					    android:layout_weight="20">
				    	</LinearLayout>
	    
	    			</LinearLayout>
	    		  
			    	<ScrollView
		            android:layout_width="fill_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1220">
		           	
			            <LinearLayout
			            android:id="@+id/challenges_container"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:orientation="vertical">
		    	    
				            <TableLayout android:id="@+id/score_table"
					        android:layout_width="fill_parent"
					        android:layout_height="fill_parent">  
				            </TableLayout>
			            
				    	</LinearLayout>
		        	
					</ScrollView>
    	
				</LinearLayout> 
    
			    <LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="60">
			    </LinearLayout>       
         
			</LinearLayout>
			
		</RelativeLayout>
		
	</RelativeLayout>
	
</RelativeLayout>
