<RelativeLayout
android:id="@+id/layout"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_centerHorizontal="true"
android:layout_centerVertical="true">

	<ImageView
	android:id="@+id/bg"
	android:scaleType="centerCrop"
	android:adjustViewBounds="true"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:src="@drawable/bg_challengeboard" >
	</ImageView>
	
	<RelativeLayout
	android:layout_width="0dp"
	android:layout_alignLeft="@+id/bg"
	android:layout_alignRight="@+id/bg"
	android:layout_height="match_parent">
	
	    
    
    <LinearLayout
    android:background="@drawable/bg_challengeboard"
    android:orientation="horizontal"
    android:id="@+id/ContainerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    
        
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="60">
    </LinearLayout> 
    
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="960">
    
        <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="100">    	
	    </LinearLayout>
	    
        <LinearLayout
        android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="216">
	    	
            <LinearLayout
            android:orientation="horizontal"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="212">
		    
                <LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="25">
				</LinearLayout>
				
                <LinearLayout
                android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="162">
				
                    <LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="0dp"
					android:layout_weight="1">
					</LinearLayout>
				
					<ImageView					
	                android:id="@+id/userThumbnail_iv"
	                android:layout_width="fill_parent"
	                android:layout_height="0dp"
	                android:layout_weight="5"
	                android:scaleType="centerCrop" />
					
					<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="0dp"
					android:layout_weight="1">
					</LinearLayout>
					
				</LinearLayout>
		    
	            
	            
	            <LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="25">
				</LinearLayout>	
                
		    </LinearLayout> 
		    		
		    <LinearLayout
		    android:orientation="vertical"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="748">
		    	
		        <LinearLayout
		        android:layout_centerVertical="true"
			    android:layout_width="fill_parent"
			    android:layout_height="0dp"
			    android:layout_weight="76">
			    
				    <TextView
				        android:id="@+id/userName_txt"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:gravity="left"
				        android:text="@string/splash"
				        android:textColor="#18305c"
				        android:textSize="25sp"
				        android:textStyle="bold" />
				    
			    </LinearLayout>
			    
			    <LinearLayout
		        android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="0dp"
			    android:layout_weight="110">
		        
			        <LinearLayout
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="3">
				    </LinearLayout>
				    
		            <LinearLayout
			        android:orientation="vertical"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="10">
				    
				    
		            	<TextView
		                android:id="@+id/userID_txt"
		                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="10"
		                android:text="fpo"
		                android:textColor="#18305c"
		                android:textSize="20sp"
		                android:textStyle="bold" />
				    	
				    	<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="0dp"
					    android:layout_weight="1">
					    </LinearLayout>
				    	
				    	<TextView				    
				        android:id="@+id/userScore_txt"
				        android:layout_width="match_parent"
				        android:layout_height="0dp"
				        android:layout_weight="10"
				        android:text="fpo"
				        android:textColor="#ffffff"
				        android:textSize="20sp" />
				    
				    </LinearLayout>
		            
			    </LinearLayout>
			    
		        <LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="0dp"
			    android:layout_weight="30">
			    </LinearLayout>    	
		    	
		    </LinearLayout>
		    
	    </LinearLayout>
	    
        <LinearLayout
        android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="384">
	    	
            <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="72">
		    </LinearLayout>
	    
	    	<Button
	    	    android:id="@+id/btn_splash"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="0dp"
	    	    android:layout_weight="150"
	    	    android:background="@drawable/button_bg"
	    	    android:clickable="true"
	    	    android:text="START NEW CHALLENGE"
	    	    android:textColor="@android:color/white"
	    	    android:textSize="30sp"
	    	    android:textStyle="bold"
	    	    android:onClick="gotoNewChallenge" />
	    	
	    	<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="62">
		    </LinearLayout>
		    
	    	<LinearLayout
	    	android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="80">
		        
	    	    <Button
		        android:id="@+id/btn_splash"
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:background="@drawable/help_button_bg"
		        android:clickable="true"
		        android:textColor="@android:color/white"
		        android:onClick="gotoHelp" />	    	    
	    	    
	    	    <LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="10">
				</LinearLayout>	    	    
	    	    
	    	    <Button
		        android:id="@+id/btn_splash"
		        android:layout_weight="1"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:background="@drawable/refresh_button_bg"
		        android:clickable="true"
		        android:textColor="@android:color/white"
		        android:onClick="gotoRefresh" />	    	    
	    	    
		    </LinearLayout>
		    
	    	<LinearLayout
	    	android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="20">
	    	</LinearLayout>
	    
	    </LinearLayout>
	    
        <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1220">
	    	<ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
           	
	            <LinearLayout
	            android:id="@+id/challenges_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
	                	
		    	</LinearLayout>
        	
	    	</ScrollView>
	    </LinearLayout>
    	
    </LinearLayout> 
    
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="60">
    </LinearLayout> 
       
         
 	</LinearLayout>

    
    
  
</RelativeLayout>

</RelativeLayout>

</RelativeLayout>





