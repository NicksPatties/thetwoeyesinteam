<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/readytoplayPage"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:facebook="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".GameplayPage">

    <RelativeLayout
    android:id="@+id/gameplay_page_wrapper"
	android:layout_width="720px"
	android:layout_height="1280px"
	android:layout_gravity="center">
	
        <ImageView
		android:id="@+id/genre_type_bg"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/movieslam_android_comp720_1280">
		</ImageView>
		
        <ImageView
        android:id="@+id/stillImage"
        android:layout_width="720px"
        android:layout_height="405px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
		    
		<SurfaceView 
		android:id="@+id/videoplayer" 
		android:layout_width="720px"
        android:layout_height="405px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
		
		<ImageView
        android:id="@+id/legalImage"
        android:layout_width="720px"
        android:layout_height="405px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

        <ProgressBar
	    android:id="@+id/progressBar"
    	style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="720px"
	    android:layout_height="10px"
	    android:layout_centerHorizontal="true"
	    android:layout_alignBottom="@id/videoplayer" 
	    android:progressDrawable="@drawable/greenprogress" 
	    android:max="100"/>
        
        <ImageView
		android:id="@+id/questionIV"
		android:layout_width="wrap_content"
		android:layout_height="44px"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/videoplayer" 
		android:layout_marginTop="50px" />
        
    
	    <Button
	    android:id="@+id/btn1"
	    android:tag="1"
	    android:layout_width="500px"
        android:layout_height="120px"
        android:layout_marginTop="30px"
        android:background="@drawable/button_bg"
        android:layout_below="@id/questionIV"
	    android:textColor="@android:color/white"
    	android:textSize="20px"
    	android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
	    android:onClick="onClick" />
        
		<ImageView
		    android:id="@+id/cross1"
		    android:layout_width="500px"
		    android:layout_height="120px"
		    android:layout_alignTop="@+id/btn1"
		    android:layout_gravity="center"
		    android:src="@drawable/wrong"
		    android:visibility="gone" /> 
		    
 		<ImageView
 		    android:id="@+id/star1"
 		    android:layout_width="500px"
 		    android:layout_height="200dp"
 		    android:layout_alignRight="@+id/btn1"
 		    android:layout_alignTop="@+id/score_text1"
 		    android:layout_marginRight="0dp"
 		    android:layout_marginTop="-60dp"
 		    android:src="@drawable/starsanimation"
 		    android:visibility="gone" />
			    
	    <TextView
	        android:id="@+id/score_text1"
	        android:layout_width="500px"
	        android:layout_height="120px"
	        android:layout_alignTop="@+id/btn1"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:textColor="@android:color/white"
	        android:textSize="50px" />
            
             
	    <Button
	    android:id="@+id/btn2"
	    android:tag="2"
	    android:layout_width="500px"
        android:layout_height="120px"
        android:layout_marginTop="30px"
        android:background="@drawable/button_bg"
        android:layout_below="@id/btn1"
	    android:textColor="@android:color/white"
    	android:textSize="20px"
    	android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
	    android:onClick="onClick" />
	    
	    <ImageView
		android:id="@+id/cross2"
		android:layout_width="500px"
		android:layout_height="120px"
		android:layout_gravity="center"
		android:visibility="gone"
		android:src="@drawable/wrong"
		android:layout_alignTop="@+id/btn2"/>
			    
	     <ImageView
	        android:id="@+id/star2"
	        android:layout_width="500px"
	        android:layout_height="200dp"
	        android:layout_alignRight="@+id/btn2"
	        android:layout_alignTop="@+id/score_text2"
	        android:layout_marginRight="0dp"
	        android:layout_marginTop="-60dp"
	        android:src="@drawable/starsanimation"
	        android:visibility="gone" /> 
	    
	    
	    <TextView
        android:id="@+id/score_text2"
        android:layout_width="500px"
        android:layout_height="120px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/btn2"/>
	    
	    
	    
	    <Button
	    android:id="@+id/btn3"
	    android:tag="3"
	    android:layout_width="500px"
        android:layout_height="120px"
        android:layout_marginTop="30px"
        android:background="@drawable/button_bg"
        android:layout_below="@id/btn2"
	    android:textColor="@android:color/white"
    	android:textSize="20px"
    	android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
	    android:onClick="onClick" />
	    
	    <ImageView
		android:id="@+id/cross3"
		android:layout_width="500px"
		android:layout_height="120px"
		android:layout_gravity="center"
		android:visibility="gone"
		android:src="@drawable/wrong"
		android:layout_alignTop="@+id/btn3"/>
	    
	     <ImageView
	        android:id="@+id/star3"
	        android:layout_width="500px"
	        android:layout_height="200dp"
	        android:layout_alignRight="@+id/btn3"
	        android:layout_alignTop="@+id/score_text3"
	        android:layout_marginRight="0dp"
	        android:layout_marginTop="-60dp"
	        android:src="@drawable/starsanimation"
	        android:visibility="gone" /> 
			    
	    <TextView
        android:id="@+id/score_text3"
        android:layout_width="500px"
        android:layout_height="120px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/btn3"/>
	    
	    
	    
	    <Button
	    android:id="@+id/btn4"
	    android:tag="4"
	    android:layout_width="500px"
        android:layout_height="120px"
        android:layout_marginTop="30px"
        android:background="@drawable/button_bg"
        android:layout_below="@id/btn3"
	    android:textColor="@android:color/white"
    	android:textSize="20px"
    	android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
	    android:onClick="onClick" />
	    
	    <ImageView
		android:id="@+id/cross4"
		android:layout_width="500px"
		android:layout_height="120px"
		android:layout_gravity="center"
		android:visibility="gone"
		android:src="@drawable/wrong"
		android:layout_alignTop="@+id/btn4"/>
			    
	    <ImageView
	        android:id="@+id/star4"
	        android:layout_width="500px"
	        android:layout_height="200dp"
	        android:layout_alignRight="@+id/btn4"
	        android:layout_alignTop="@+id/score_text4"
	        android:layout_marginRight="0dp"
	        android:layout_marginTop="-60dp"
	        android:src="@drawable/starsanimation"
	        android:visibility="gone" /> 
	    
	    <TextView
        android:id="@+id/score_text4"
        android:layout_width="500px"
        android:layout_height="120px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="50px"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/btn4"/>


        
	</RelativeLayout>
	
</FrameLayout>





