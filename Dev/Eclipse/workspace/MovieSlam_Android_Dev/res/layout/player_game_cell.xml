<?xml version="1.0" encoding="utf-8"?>  

<TableRow
xmlns:android="http://schemas.android.com/apk/res/android"  
android:layout_width="620px"
android:layout_height="210px"
android:layout_marginLeft="12px"
android:layout_marginRight="12px"
android:layout_marginTop="12px">

    

    <RelativeLayout
	android:layout_width="620px"
	android:layout_height="210px">
	
    <ImageView
	android:layout_width="620px"
	android:layout_height="210px"
	android:src="@drawable/panel_challengeboard_inactive" />
	
    <ImageView	
	android:id="@+id/challenge_player_tn"
	android:adjustViewBounds="true"
	android:layout_width="100px"
	android:layout_height="100px"
	android:scaleType="centerCrop"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true"
	android:layout_marginTop="10px"
	android:layout_marginBottom="10px"
	android:layout_marginLeft="20px"
	android:layout_marginRight="10px" />   
   
	<Button
	android:id="@+id/player_challenge_b0"
	android:layout_width="250px"
	android:layout_height="75px"
	android:background="@drawable/button_bg_small"
	android:text="b0"
	android:textStyle="bold"
	android:textColor="#FFFFFF"
	android:textSize="16px"
	android:layout_alignLeft="@id/challenge_player_tn"
	android:layout_below="@id/challenge_player_tn"/>
	
	<Button
	android:id="@+id/player_challenge_b1"
	android:layout_width="250px"
	android:layout_height="75px"
	android:background="@drawable/button_bg_small"
	android:text="b1"
	android:textStyle="bold"
	android:textColor="#FFFFFF"
	android:textSize="16px"
	android:layout_below="@id/challenge_player_tn"
	android:layout_toRightOf="@id/player_challenge_b0"
	android:layout_marginLeft="20px" />
	
	<TextView
	android:id="@+id/player_name_txt"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="First Name\nLast Name"
	android:textColor="#18305c"
	android:textSize="23px"
	android:textStyle="bold"
	android:layout_toRightOf="@id/challenge_player_tn"
	android:layout_toLeftOf="@+id/player_score_txt" />
	
	<TextView
	android:id="@id/player_score_txt"
	android:layout_width="120px"
	android:layout_height="64px"
	android:textColor="#18305c"
	android:textSize="20px"
	android:textStyle="bold"
	android:text="0:0"
	android:gravity="right|top"
	android:layout_alignParentTop="true"
	android:layout_alignParentRight="true"
	android:layout_marginRight="10px"/>
	
	</RelativeLayout>
         
</TableRow>